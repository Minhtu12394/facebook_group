<div class="h-top" id="home">
  <div class="top-header">
    <ul class="cl-effect-16 top-nag pull-right">
      <li><%= link_to t(".home"), root_path, data:{hover: t(".home")} %></li>
      <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t ".acc" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to t(".profile"), user_path(current_user),
                  data:{hover: t(".profile")}, class: "li-droppdown" %>
              </li>

              <li>
                <%= link_to t(".setting"), edit_user_registration_path,
                  data:{hover: t(".setting")}, class: "li-droppdown" %>
              </li>

              <li>
                <%= link_to t(".log_out"), destroy_user_session_path,
                  method: :delete, data:{hover: t(".log_out")},
                  class: "li-droppdown" %>
              </li>
            </ul>
          </li>
      <% else %>
      <li>
        <%= link_to t(".menu.registration"),new_user_registration_path,
          data:{hover: t(".registration")} %>
      </li>
      <li>
        <%= link_to t(".login"), user_session_path,
          data:{hover: t(".login")} %>
      </li>
      <% end %>

    </ul>
    <div class="clearfix"></div>
  </div>
</div>
