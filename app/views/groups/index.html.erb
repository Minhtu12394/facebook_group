<h1 class="text-center"><%= t ".all_groups" %> <br></h1>
<% if signed_in? %>
  <%= link_to new_group_path, remote: true, class: "btn btn-primary" do %>
    <span class="fa fa-plus"></span>
    <%= t ".create_group" %>
  <% end %>
<% end %>
<div id="myModal"></div>
<% if @groups.any? %>
  <%= render @groups %>
<% end %>
<br>
<div class="text-center">
  <%= paginate @groups, theme: "twitter-bootstrap-3" %>
</div>
